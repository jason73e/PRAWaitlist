@model IEnumerable<PRAWaitList.Models.StateModel>

@{
    ViewBag.Title = "Index";
}

<h2>States</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StateID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StateID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StateID })
        </td>
    </tr>
}
    @if (Model.Count() == 0)
    {
        @Html.ActionLink("Add Seed Values", "Seed", null, new { @class = "btn btn-primary" })
    }

</table>
