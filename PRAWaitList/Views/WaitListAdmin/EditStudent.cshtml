@model PRAWaitList.Models.IntentToEnrollViewModel

    <div class="form-horizontal col-md-6">
        <h4>Student Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.sm.Id)
        @Html.HiddenFor(model => model.sm.FamilyID)
        @Html.HiddenFor(model => model.sm.CreateDate)
        @Html.HiddenFor(model => model.sm.UpdateDate)
        @Html.HiddenFor(model => model.sm.UpdateUserID)
        @Html.HiddenFor(model => model.sm.isActive)
        @Html.HiddenFor(model => model.sm.isPRASibling)


        <table class="table">
            <tr class="no-border">
                <td nowrap="nowrap">
                    @Html.LabelFor(model => model.sm.FirstName, htmlAttributes: new { @class = "control-label" })
                </td>
                <td nowrap="nowrap">
                    @Html.LabelFor(model => model.sm.LastName, htmlAttributes: new { @class = "control-label" })
                </td>
                <td nowrap="nowrap">
                    @Html.EditorFor(model => model.sm.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sm.FirstName, "", new { @class = "text-danger" })
                </td>
                <td nowrap="nowrap">
                    @Html.EditorFor(model => model.sm.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.sm.LastName, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.BirthDate, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.sm.BirthDate, new { htmlAttributes = new { @class = "form-control date-picker" } })
                @Html.ValidationMessageFor(model => model.sm.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.Gender, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8 radio">
                <fieldset>
                    <label> @Html.RadioButtonFor(model => model.sm.Gender, "Male") Male </label>
                    <label> @Html.RadioButtonFor(model => model.sm.Gender, "Female") Female </label>
                </fieldset>
                @Html.ValidationMessageFor(model => model.sm.Gender, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.CurrentGrade, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EnumDropDownListFor(model => model.sm.CurrentGrade, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sm.CurrentGrade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.ApplyGrade, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EnumDropDownListFor(model => model.sm.ApplyGrade, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sm.ApplyGrade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.ApplyYear, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.sm.ApplyYear, PRAWaitList.DAL.Utility.GetSchoolYearList(), "- Select a School Year - ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sm.ApplyYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.LocalDistrict, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.sm.LocalDistrict, Model.DistrictList, "- Select a District - ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sm.LocalDistrict, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.LocalSchool, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.sm.LocalSchool, Model.SchoolList, "- Select a School - ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sm.LocalSchool, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.Status, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.sm.Status, Model.StatusList, "- Select a Status - ", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.sm.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sm.LearnAboutPRA, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.sm.LearnAboutPRA, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sm.LearnAboutPRA, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>
